<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>Welcome to Dutch Treat</header>
    <menu>
        <ul>
            <li><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            <li><a asp-controller="App" asp-action="AboutUs">About Us</a></li>
        </ul>
    </menu>
    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>
    
    <footer>Copyright 2019 Dutch Treat LLC</footer>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("Scripts",false) <!-- Must set false if this section is not required on every page -->
</body>
</html>


